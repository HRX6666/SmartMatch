<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewMode"
            type="com.example.smartmatch.ui.construction.areadefine.AreaDefineViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_light"
        tools:context=".ui.construction.areadefine.AreaDefineFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/bt_next"
    android:orientation="vertical"
    android:weightSum="2"
    >
    <RelativeLayout
        android:id="@+id/net_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        >

        <ToggleButton
            android:id="@+id/choose_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_20"
            android:drawableEnd="@drawable/toggle_arrow"
            android:paddingEnd="50dp"
            android:textSize="26sp"
            android:padding="15dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="26sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeStepGranularity="1sp"
            android:textColor="@color/grey"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="textStart"
            android:paddingStart="40dp"
            android:textOff="@string/choose_net"
            android:textOn="@string/choose_net"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/net_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choose_net"
            android:layout_marginHorizontal="70dp"
            android:visibility="visible"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/area_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/net_layout"
        android:layout_marginTop="5dp"
        android:layout_above="@id/bt_next"
        android:layout_weight="1"
        >
        <ToggleButton
            android:id="@+id/choose_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_20"
            android:drawableEnd="@drawable/toggle_arrow"
            android:paddingEnd="50dp"
            android:textSize="26sp"
            android:padding="15dp"

            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="26sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeStepGranularity="1sp"
            android:textColor="@color/grey"
            android:layout_marginHorizontal="30dp"
            android:textAlignment="textStart"
            android:paddingStart="40dp"
            android:textOff="@string/choose_area"
            android:textOn="@string/choose_area"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/area_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/choose_area"
            android:layout_marginHorizontal="70dp"
            android:visibility="visible"
            />

    </RelativeLayout>

</LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/blue_dark_plus"
            android:text="下一步"
            android:paddingVertical="10dp"
            android:paddingHorizontal="18dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="26sp"
            android:autoSizeMinTextSize="18sp"
            android:autoSizeStepGranularity="1sp"
            android:shadowColor="@color/blue_light"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:cornerRadius="10dp"
            app:rippleColor="@color/blue_dark" />
    </RelativeLayout>
</layout>