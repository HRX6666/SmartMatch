<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_vertical_diamonds_distance"
        android:background="@drawable/round_20"
        android:layout_marginHorizontal="@dimen/app_horizontal_margin_distance"
        android:layout_marginVertical="10sp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/collection_scene_example_text"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="@dimen/app_text_size_max"
            android:autoSizeMinTextSize="@dimen/app_text_size_min"
            android:autoSizeStepGranularity="1sp"
            android:textStyle="bold"
            android:textSize="@dimen/app_text_size_normal"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/app_margin_start_distance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>