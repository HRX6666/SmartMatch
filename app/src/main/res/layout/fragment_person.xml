<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.smartmatch.ui.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.person.PersonFragment">
        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="180dp"
            android:orientation="horizontal"
            android:background="@drawable/round_20"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:layout_marginStart="60dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textColor="@color/blue_dark_plus"
                android:textSize="@dimen/app_text_size_normal"
                android:padding="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:autoSizePresetSizes="@array/sizes"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:maxLines="1"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/app_text_size_normal"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="@dimen/app_text_size_max"
                android:autoSizeMinTextSize="@dimen/app_text_size_min"
                android:autoSizeStepGranularity="1sp"
                android:textStyle="bold"
                android:autoSizePresetSizes="@array/sizes"
                android:gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>
</layout>